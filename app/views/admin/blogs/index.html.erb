<h2>Admin</h2>

<ul class="unlist horizontal actions right">
  <li><%= link('New', slice_url(:new_admin_blog)) %></li>
</ul>

<table class="clear" style="width:100%">
  <thead>
    <tr>
      <th>Created</th>
      <th>Pub.</th>
      <th>Category</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for blog in @blogs %>
      <tr>
        <td style="width:50%;"><%= print_date( blog.created_at ) %></td>
        <td style="width:50%;"><%= print_date( blog.published_at ) if blog.published_at %></td>
        <td style="width:100px;">
          <%= (cat = blog.category) ? link( cat.title, slice_url(:admin_blogs, :category_id => cat.id) ) : nil %>
        </td>
        <td>
          <% if blog.published? %>
            <%= link( blog.title, slice_url(:blog, blog), :target => '_blank' ) %>
          <% else %>
            <%= blog.title %>
          <% end %>
        </td>
        <td style="width:100px">
          <%= link( 'Edit', slice_url(:edit_admin_blog, blog) ) %>
          <% confirm = "return confirm('Are you certain you want to delete this blog?');" %>
          <%= delete_button( :blog, blog, 'Delete', {:style   => 'display:inline;'}, {:onclick => confirm, :style => 'font-size:.8em' } ) %>
          <br />
          <%= link( blog.count_comments == 1 ? 'Comment' : 'Comments', '#' ) unless blog.count_comments == 0 %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>